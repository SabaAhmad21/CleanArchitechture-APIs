@using Infrastructure.ViewModels
@model IEnumerable<CategoryVM>
<div class="pageheader">
    <div class="media">
        <div class="pageicon pull-left">
            <i class="fa fa-home"></i>
        </div>
        <div class="media-body">
            <ul class="breadcrumb">
                <li><a asp-area="Admin" asp-action="Index" asp-controller="Home"><i class="glyphicon glyphicon-home"></i></a></li>
                <li>Categories</li>
            </ul>
            <h4>Categories</h4>
        </div>
    </div><!-- media -->
</div><!-- pageheader -->

<div class="contentpanel">
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-primary mb30">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Category Name</th>
                            <th>Is Featured</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Count() > 0)
                        {
                            int index = 1;
                            foreach(var item in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="pull-left badge">
                                            @index
                                        </span>
                                    </td>
                                    <td>
                                        @item.CategoryName
                                    </td>
                                    <td>
                                        @if(item.IsEnable)
                                        {
                                            <span class="fa fa-check-square" style="color: green; font-size:15px"></span>
                                        }
                                        else
                                        {
                                            <span class="fa fa-times-circle" style="color: red; font-size:15px"></span>
                                        }
                                    </td>
                                    <td>
                                        <a href="#" class="btn btn-xs btn-success">
                                            <span class="fa  fa-pencil">

                                            </span>
                                        </a>
                                        <a href="#" class="btn btn-xs btn-danger">
                                            <span class="fa fa-trash-o">

                                            </span>
                                        </a>
                                    </td>
                                </tr>
                                index++;
                            }
                        }
                    </tbody>
                </table>
            </div><!-- table-responsive -->
        </div>
    </div>

</div><!-- contentpanel -->